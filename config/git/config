# vim: set ft=gitconfig ts=2 sw=2 et :

[alias]
  ar  = archive
  br  = branch
  cl  = clone
  clr = clone --recursive
  cm  = commit
  co  = checkout
  df  = diff
  dfi = diff --cached
  fa  = fetch --all
  pl  = pull
  ps  = push
  sm  = submodule
  ss  = stash
  st  = status --short --branch

  branches  = branch -a
  tags      = tag
  stashes   = stash list
  unstage   = reset -q HEAD --
  discard   = checkout --
  uncommit  = reset --mixed HEAD~
  amend     = commit --amend
  graph     = log --graph --all --format=format:'%Cgreen%h %Cresetâ€¢ %<(40,trunc)%s (%cN, %cr) %Cred%d'

[core]
  preloadindex  = true
  fscache       = true
  editor        = vim
  autocrlf      = input
  safecrlf      = false
  symlinks      = true

[merge]
  ff    = false
  tool  = vimdiff

[diff]
  renames = true

[i18n]
  filesEncoding = utf-8

[push]
  default = current

[tig "color"]
  cursor      = yellow  default bold underline
  title-focus = default red     bold
